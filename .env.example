
# =================================
# EscalaFin MVP - Environment Variables Template
# =================================
# Copia este archivo como .env y completa los valores

# ---------------------------------
# Database Configuration
# ---------------------------------
DATABASE_URL=postgresql://escalafin:PASSWORD@localhost:5432/escalafin
POSTGRES_USER=escalafin
POSTGRES_PASSWORD=
POSTGRES_DB=escalafin
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ---------------------------------
# NextAuth Configuration
# ---------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
# Generate with: openssl rand -base64 32

# ---------------------------------
# OpenPay Configuration
# ---------------------------------
OPENPAY_MERCHANT_ID=
OPENPAY_PRIVATE_KEY=
OPENPAY_PUBLIC_KEY=
OPENPAY_BASE_URL=https://sandbox-api.openpay.mx

# ---------------------------------
# AWS S3 Configuration
# ---------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=escalafin-files
AWS_REGION=us-east-1
AWS_FOLDER_PREFIX=development/

# ---------------------------------
# Evolution API (WhatsApp)
# ---------------------------------
EVOLUTION_API_URL=
EVOLUTION_API_TOKEN=
EVOLUTION_INSTANCE_NAME=escalafin

# ---------------------------------
# Application Configuration
# ---------------------------------
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# ---------------------------------
# Deployment Configuration
# ---------------------------------
SKIP_MIGRATIONS=false
RUN_SEED=false

# ---------------------------------
# Redis Configuration (Optional)
# ---------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
