
# ===================================
# VARIABLES DE ENTORNO - PLANTILLA
# ===================================

# ----------------------
# Base de Datos
# ----------------------
DATABASE_URL="postgresql://usuario:password@localhost:5432/nombre_db?schema=public"

# ----------------------
# NextAuth & JWT
# ----------------------
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generar-con-script-generar-secretos-js"
JWT_SECRET="generar-con-script-generar-secretos-js"

# ----------------------
# Node Environment
# ----------------------
NODE_ENV="development"

# ----------------------
# AWS S3 (Opcional)
# ----------------------
AWS_ACCESS_KEY_ID="tu_access_key"
AWS_SECRET_ACCESS_KEY="tu_secret_key"
AWS_BUCKET_NAME="tu_bucket"
AWS_REGION="us-east-1"
AWS_FOLDER_PREFIX="uploads/"

# ----------------------
# Google Drive (Opcional)
# ----------------------
GOOGLE_DRIVE_CLIENT_ID="tu_client_id"
GOOGLE_DRIVE_CLIENT_SECRET="tu_client_secret"
GOOGLE_DRIVE_REDIRECT_URI="http://localhost:3000/api/auth/callback/google"
GOOGLE_DRIVE_FOLDER_ID="tu_folder_id"

# ----------------------
# Email (Opcional)
# ----------------------
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu@email.com"
SMTP_PASSWORD="tu_password"
EMAIL_FROM="noreply@tu-dominio.com"

# ----------------------
# Otros Servicios (Opcional)
# ----------------------
WHATSAPP_API_URL="https://api.whatsapp.com"
WHATSAPP_API_KEY="tu_api_key"

# ----------------------
# Configuración de Aplicación
# ----------------------
APP_NAME="Mi Aplicación"
APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Mi Aplicación"

# ----------------------
# Prisma
# ----------------------
# NO configurar output aquí - debe estar en schema.prisma
