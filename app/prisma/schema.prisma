// WhatsApp Messaging System - EvolutionAPI Integration
enum WhatsAppMessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

enum WhatsAppMessageType {
  PAYMENT_RECEIVED
  PAYMENT_REMINDER
  LOAN_APPROVED
  LOAN_UPDATE
  MARKETING
  CUSTOM
}

